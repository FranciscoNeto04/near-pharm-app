<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deafult_light_blue">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        style="@style/Style_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="NearPharm"
        app:layout_constraintLeft_toLeftOf="@id/logo"
        app:layout_constraintRight_toRightOf="@id/logo"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Cadastre-se"
        app:layout_constraintRight_toRightOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <RadioGroup
        android:id="@+id/user_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slogan">

        <TextView
            style="@style/Style_Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Como você deseja se cadastrar?" />

        <RadioButton
            android:id="@+id/user_pharm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farmácia" />

        <RadioButton
            android:id="@+id/user_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/user_client_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/user_type"
        android:visibility="gone">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Email"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Senha"
            android:inputType="textPassword"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Nome completo"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp" />

        <EditText
            android:id="@+id/cpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="CPF"
            android:inputType="number"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp" />

        <EditText
            android:id="@+id/address_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Endereço"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp" />

        <EditText
            android:id="@+id/telephone_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Telefone"
            android:inputType="phone"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_pharm_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/user_type"
        android:visibility="gone">

        <EditText
            android:id="@+id/email_pharm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Email"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp" />

        <EditText
            android:id="@+id/password_pharm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Senha"
            android:inputType="textPassword"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp" />

        <EditText
            android:id="@+id/name_pharm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Nome da Farmácia"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp" />

        <EditText
            android:id="@+id/cnpj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="CNPJ"
            android:inputType="number"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp" />

        <EditText
            android:id="@+id/address_pharm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Endereço da Farmácia"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp" />

        <EditText
            android:id="@+id/telephone_pharm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Telefone"
            android:inputType="phone"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Cadastrar"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_margin="16dp"
        android:background="@drawable/button_background"
        android:paddingVertical="16dp"
        android:paddingHorizontal="22dp"
        style="@style/Style_Title"/>
</androidx.constraintlayout.widget.ConstraintLayout>